{% extends 'base.html.twig' %}

{% block title %}Society{% endblock %}

{% block body %}
    <section class="text-blueGray-700 bg-white mt-5">
        <div class="container flex flex-col items-center align-center px-5 py-16 mx-auto md:flex-row lg:px-28">
            <div class="flex flex-col items-start mb-16 text-left lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 md:mb-0">
                <h2 class="mb-8 text-xs font-semibold tracking-widest text-black uppercase title-font"> {{ society.id }} </h2>
                <h1 class="mb-8 text-2xl font-black tracking-tighter text-black md:text-5xl title-font"> {{ society.title }} </h1>
                <p class="mb-8 text-base leading-relaxed text-left text-blueGray-600 "> {{ society.description }} </p>
                <p class="mt-2 text-sm text-left text-blueGray-600 md:mt-0"> Date de création : <br class="hidden lg:block">
                <p href="#" class="inline-flex items-center font-semibold text-blue-600 md:mb-2 lg:mb-0 hover:text-black " title="read more"> {{ society.date ? society.date|date('d-m-Y à H:i:s') : '' }} </p></p>
                <div class="flex flex-col justify-center lg:flex-row">
                    <a href="{{ path('society_index') }}" class="flex items-center px-6 py-2 mt-auto mr-5 font-semibold text-white transition duration-500 ease-in-out transform bg-black rounded-lg hover:bg-gray-600 focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2">
                        Retour</a>
                    <a href="{{ path('society_edit', {'id': society.id}) }}" class="flex items-center px-6 py-2 mt-auto font-semibold text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-lg hover:bg-blue-700 focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2"> Edit </a>
                    {{ include('society/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="w-full lg:w-1/3 lg:max-w-lg md:w-1/2">
                <img class="object-cover object-center rounded-lg " alt="hero" src="{{ asset(society.image) }}">
            </div>
        </div>
    </section>


{% endblock %}
